{
  "name": "Campus-guide-Concordia-University",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "prestart": "node -e \"const fs = require('fs'); const required = ['typescript', 'expo', 'firebase', 'react', 'react-native']; const missing = required.filter(d => !fs.existsSync('node_modules/' + d)); if (missing.length) { console.error('Missing dependencies:', missing.join(', ') + '. Run: npm install'); process.exit(1); }\"",
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "expo": "~54.0.0",
    "expo-status-bar": "~3.0.9",
    "firebase": "^10.7.0",
    "react": "19.1.0",
    "react-native": "0.81.5"
  },
  "devDependencies": {
    "@testing-library/react-native": "^12.9.0",
    "@types/react": "~19.1.10",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.0",
    "react-native-dotenv": "^3.4.9",
    "react-test-renderer": "19.1.0",
    "typescript": "^5.3.0"
  },
  "jest": {
    "preset": "jest-expo",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ]
  }
}
